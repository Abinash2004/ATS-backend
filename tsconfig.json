{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"rootDir": "./src",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "Node",
		"ignoreDeprecations": "5.0",
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
